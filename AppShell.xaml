<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EFDocenteMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EFDocenteMAUI"
    xmlns:views="clr-namespace:EFDocenteMAUI.Views"
    Title="EFDocenteMAUI"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Login">
            <ShellContent ContentTemplate="{DataTemplate views:LoginPage}" Route="LoginPage" />
        </Tab>
        <Tab Title="Register">
            <ShellContent ContentTemplate="{DataTemplate views:RegisterUserPage}" Route="RegisterUserPage" />
        </Tab>
        <Tab Title="Main">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
        </Tab>
        <Tab Title="Calendar">
            <ShellContent ContentTemplate="{DataTemplate views:CalendarPage}" Route="CalendarPage" />
        </Tab>
    </TabBar>

</Shell>
