<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EFDocenteMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EFDocenteMAUI"
    xmlns:views="clr-namespace:EFDocenteMAUI.Views"
    Title="EFDocenteMAUI"
    Shell.FlyoutBehavior="Disabled">


    <ShellContent
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage" />

    <ShellContent
        ContentTemplate="{DataTemplate views:RegisterUserPage}"
        Route="RegisterUserPage" />


    <ShellContent
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        ContentTemplate="{DataTemplate views:CalendarPage}"
        Route="CalendarPage" />

    <ShellContent
        ContentTemplate="{DataTemplate views:UnitsPage}"
        Route="UnitsPage" />


</Shell>
